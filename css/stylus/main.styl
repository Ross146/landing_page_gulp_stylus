@import 'nib'

$text-color = #333
$red-color = #9B1818
$blue-color = #003469
$green-color = #67bc5c

body
	font-family: "RobotoRegular", sans-serif
	color: $text-color
	font-weight: normal
	font-size: 16px
	min-width: 320px
	position: relative
	line-height: 1.6
	-webkit-font-smoothing: antialised
	overflow-x hidden
	
h1
	color white
	font-size 60px
	line-height 56px
	font-weight: bold
	font-family: "CleanvertisingLight", sans-serif
	margin 0	
section, footer
	padding: 58px 0 68px
	&.s_dark
		h2, h3, p
			color white
	h2
		color #blue-color
		font-size 50px
		line-height 56px
		margin-bottom: 50px
		font-family: "CleanvertisingLight", sans-serif
		text-align center
		margin-top: 0
		font-weight: normal
	p strong
		font-family: "RobotoBold", sans-serif
		font-weight: normal	

body input:focus:required:invalid,
body textarea:focus:required:invalid
	color: red
	box-shadow 0 0 0 2px $red-color	
	border-color $red-color
body input:required:valid,
body textarea:required:valid
	color: green
.hidden
	display: none	
header
	min-height 640px	
	background-image url(../img/top_bg.jpg)
	background-position top center
	background-size cover
	color white
	padding-top 32px	
	padding-bottom 40px
.logo
	font-size 40px
	font-family "RobotoBold", sans-serif
	font-weight bold
.top_phone
	text-align right	
.top_phone .wrapper .tab, .bottom_phone .wrapper .tab
	text-transform: uppercase
	cursor: pointer 	
.top_phone .wrapper .active, .bottom_phone .wrapper .active
	text-decoration: underline
	
.top_phone .tab_item, .bottom_phone .tab_item
	font-size: 34px
	font-weight: bold
	display: none	
	font-family: "RobotoBold", sans-serif
	
.top_phone .tab_item:first-child, .bottom_phone .tab_item:first-child
	display block	
.top_header
	margin-top: 80px
	h2
		margin 10px 0 0
		font-family: "CleanvertisingLight", sans-serif
		font-weight: bold
		font-size: 36px		
.tabs_header
	margin-top: 30px
	ul, li
		list-style none
		margin 0 
		padding 0
	li
		padding-left 40px
		position relative
		margin-bottom 15px
		font-family "RobotoBold", sans-serif
		font-size 18px
		i
			position absolute
			left 0
			top -15px
			color #6F6A67
	.tabs
		font-size 0
		text-transform: uppercase
		cursor: pointer 
		.tab
			display inline-block
			background-color: rgba(255, 255, 255, .25)
			padding 15px 18px
			font-size 16px
			font-family "RobotoBold", sans-serif
			transition all .25s ease
			&.active
				background-color: rgba(255, 255, 255, .6)
				color black					
	.tab_content
		font-family "RobotoBold", sans-serif
		font-size 18px
		text-transform uppercase
		background-color rgba(255, 255, 255, .6) 
		padding 12px 18px 16px
		color black					
		.tab_item
			display none			
			font-family: "RobotoBold", sans-serif
			&:first-child
				display: block

.button
	border: none
	cursor pointer
	display inline-block
	height 46px
	line-height 46px
	padding 0 32px
	background-color black
	text-transform uppercase
	text-align center	
	color white
	border-radius 3px
	font-size 16px
	font-family "RobotoBold" , sans-serif
	&:hover
		color white
		text-decoration none
	&.btn_red
		background-color: $red-color
	&.btn_green
		background-color: $green-color
	&.btn_white
		background-color: white
		color black
	
.button_wrap
	text-align right
	background-color
.s_tizers
	color $blue-color
	background: linear-gradient(#c6d8ee, #e8eff7);
	font-family: "CleanvertisingLight", sans-serif
	text-transform uppercase
	padding 35px 0 0		 		
	span
		font-size: 14px
		display block
	strong
		font-weight: normal
		font-size: 23px
		display block
	.row > div
		margin-bottom 35px
	.row > div:nth-child(1) 
		i
			font-family: "RobotoRegular", sans-serif
			letter-spacing -10px
			margin-right: 18px
		strong
			font-size: 25px
			line-height 28px
		span 
			font-size: 20px
			line-height 22px
	.row > div:nth-child(2) strong 		
		font-size: 25px
		line-height 28px
	.row > div:nth-child(2)	span
		font-size: 16px
		line-height 24px
	.row > div:nth-child(2)	i
		position relative
		bottom -5px
	.row > div:nth-child(3) strong 		 
		line-height 28px
	.row > div:nth-child(3)	span		 
		line-height 20px
	.row > div:nth-child(4)	span
		font-size: 13px
		line-height 15px
	.row > div:nth-child(4)	strong
		line-height 28px
		 

	
.tiz_img,
.tiz_descr
	display inline-block
	vertical-align bottom
	
.tiz_img i
	font-size 70px
	line-height 48px
	margin-right 5px
	


.profi_left
	color $red-color
	i
		font-size: 100px	
		line-height 110px

.profi_right
	h3
		color $red-color
		font-size: 28px
		margin 0
	p
		margin-top 5px
		
form
	background-color: #F7F7F7
	padding 25px 30px
	border 5px solid $green-color
	border-radius 5px
	h2
		text-transform uppercase
		margin-top: 0
		font-family: "RobotoBold", sans-serif
		font-size: 22px
		line-height 22px
		color $text-color
		margin-bottom 30px
	label
		display block
		margin-bottom: 15px
		font-size: 14px
		color #666
	input,
	select
		display block;
		line-height 40px
		height 40px
		border: 1px solid #D9D9D9
		background-color white
		box-shadow 0 0 20px rgba(0, 0, 0, .06) inset
		width 100%
		text-indent 10px
		font-size: 20px
		&:focus
			box-shadow 0 0 0 2px $green-color
			border-radius 3px
			border-color: $green-color
	.button_wrap
		text-align center
		margin: 30px 0 10px
		
.s_review 
	background-image url(../img/middle_bg.jpg)
	background-repeat repeat-x
	background-attachment fixed
	background-size: cover
	min-height 500px
	background-color #412521
.review_item
	text-align center
	color: #fff
	h4
		font-family: "TimesNewRomanRegular", serif
		font-style: italic
		font-size 22px
		font-weight normal
		margin-top: 20px
		line-height 70px		
		&:after			
			content ''			
			display block
			width 80px
			height 1px
			background-color #CEA380
			margin auto
	p
		float:none
		display inline-block
		margin 0 auto 0
		font-size: 15px
					
	.image_wrap
		img
			width 165px
			height 165px
			display inline-block
			border-radius 50%
			border: 10px solid #585A5B 
			
.owl-nav
	
	div
		width 36px
		height 140px
		background-image url(../img/arrow_carousel.png)
		background-repeat no-repeat
		position absolute
		top: 20px
		opacity .6
		&:hover
			opacity 1
		&.owl-next
			right 0;
			background-position right 
			
.owl-dots
	width 100%
	margin-top 30px
	text-align center
	.owl-dot
		width 13px
		height 13px
		background-color #fff 
		display inline-block
		margin 0 5px
		border-radius 50%
		opacity .5
		&.active
			opacity .8
			
.s_back
		background-image: url(../img/red_bg.jpg)
		background-position: top center
		text-align center
		padding 40px 0
		h3
			margin-top 0
			text-transform uppercase
			font-weight: normal
			font-size: 26px
			text-align center
			background-color: rgba(255, 255, 255, .13)
			padding-bottom 10px 0

.s_contacts
	padding-bottom: 0 		
	text-align centervar
	h2
		color black
		display inline-block
		vertical-align middle
		margin-bottom 0
		height 45px
		line-height 45px
		
	.tabs
		display inline-block
		vertical-align middle
		height 45px		
		margin-left : 20px
		font-size: 0
		.tab
			display inline-block
			line-height 38px
			font-size: 16px
			padding 0 60px
			border 5px solid $red-color
			color $red-color     
			&:first-child
				border-radius 3px 0 0 3px
			&:last-child
				border-radius 0 3px 3px 0
			&.active
				background-color: $red-color
				color white
				
	.wrapper
		margin-top: 15px
		font-size: 18px 
				
	.tab_item:last-child
		display none 
			
.map 
	margin-top: 20px
	min-height 480px
	background-color: #E1D6B0
	
footer
	text-align center
	h2
		margin-bottom 25px
	p
		font-size: 18px
		margin-top 0
		
.bottom_phone
	margin-top 50px
	color $red-color
.button
	margin-top: 20px
		